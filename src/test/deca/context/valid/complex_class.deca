class Droite {
    protected int champ = 0;
    void pente(){
        if (champ < 0){
            println(-1);
        }
        else if (champ > 0){
            println(1);
        }
        else {
            println(0);
        }
    }
    int compter(){
    champ = champ + 1 ;
    return champ;}
}

